{
  "name": "pigit",
  "productName": "PiGit",
  "author": {
    "name": "Grzegorz Klimek",
    "email": "kfiku.com@gmail.com",
    "url": "https://github.com/kfiku"
  },
  "version": "0.9.1",
  "description": "electron app to watch git repos",
  "main": "dist/main/main.js",
  "license": "MIT",
  "scripts": {
    "test": "npm run lint && npm run test:cov",
    "start": "node fuse",
    "start:electron": "electron .",
    "start:electron:watch": "nodemon --watch 'dist/main/*.*' --exec 'electron .'",
    "build": "npm run lint && export NODE_ENV=production && node fuse dist",
    "lint": "tslint --type-check -p . -c tslint.json 'src/**/*.ts' 'src/**/*.tsx' 'test/**/*.ts' --fix",
    "prod": "export NODE_ENV=production && npm run build && npm run start:electron",
    "package": "npm run build && build --publish never",
    "pack-and-publish": "npm run build && build --publish always",
    "pack-and-publish-all": "npm run build && build -ml --publish always",
    "package-all": "npm run build && build -mwl",
    "package-linux": "npm run build && build --linux",
    "package-win": "npm run build && build --win --x64",
    "test:cov": "jest --coverage",
    "test:unit": "jest",
    "test:watch": "jest --watchAll"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.(ts|tsx|js)"
    ]
  },
  "build": {
    "productName": "PiGit",
    "appId": "org.kfiku.PiGit",
    "files": [
      "dist/",
      "node_modules/",
      "resources/",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Utility"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kfiku/piGit.git"
  },
  "bugs": {
    "url": "https://github.com/kfiku/piGit/issues"
  },
  "homepage": "https://github.com/kfiku/piGit",
  "devDependencies": {
    "@types/async": "2.0.37",
    "@types/chai": "4.0.2",
    "@types/jest": "^21.1.4",
    "@types/node": "^8.0.15",
    "@types/prop-types": "^15.5.1",
    "@types/react": "16.0.1",
    "@types/react-dom": "15.5.2",
    "@types/react-redux": "4.4.47",
    "@types/sortablejs": "1.3.31",
    "babel-core": "^6.20.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-latest": "^6.16.0",
    "chai": "~3.5.0",
    "devtron": "~1.4.0",
    "electron": "^1.7.9",
    "electron-builder": "^19.37.2",
    "electron-debug": "~1.4.0",
    "electron-devtools-installer": "~2.2.0",
    "express": "^4.15.4",
    "fuse-box": "^2.2.31",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "uglify-js": "^3.0.27"
  },
  "dependencies": {
    "@types/react-helmet": "^5.0.3",
    "async": "~2.5.0",
    "diff2html": "^2.0.12",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.9",
    "electron-settings": "^3.1.1",
    "electron-updater": "^2.8.9",
    "es6-promisify": "~5.0.0",
    "file-icons-js": "github:websemantics/file-icons-js",
    "highlight.js": "^9.12.0",
    "jquery": "^3.2.1",
    "moment": "~2.19.0",
    "node-notifier": "^5.1.2",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.2.0",
    "react-icons": "^2.2.7",
    "react-inlinesvg": "~0.6.0",
    "react-redux": "^5.0.3",
    "react-resizable": "^1.7.5",
    "redux": "~3.7.0",
    "redux-thunk": "^2.2.0",
    "simple-git": "^1.75.0",
    "sortablejs": "~1.6.0",
    "styled-components": "^2.1.1"
  }
}
