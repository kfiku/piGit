{
  "name": "pigit",
  "productName": "PiGit",
  "author": {
    "name": "Grzegorz Klimek",
    "email": "kfiku.com@gmail.com",
    "url": "https://github.com/kfiku"
  },
  "version": "1.3.7",
  "description": "electron app to watch git repos",
  "main": "dist/main/main.js",
  "license": "MIT",
  "scripts": {
    "test": "npm run lint && npm run test:cov",
    "start": "node fuse",
    "start:electron": "electron .",
    "start:electron:watch": "nodemon --watch 'dist/main/*.*' --exec 'electron .'",
    "release": "release-it --src.tagName='v%s' --no-npm.publish",
    "build": "npm run lint && export NODE_ENV=production && node fuse dist",
    "lint": "tslint --type-check -p . -c tslint.json 'src/**/*.ts' 'src/**/*.tsx' 'test/**/*.ts'",
    "prod": "export NODE_ENV=production && npm run build && npm run start:electron",
    "package": "npm run build && build --publish never",
    "pack-and-publish-all": "npm run build && build -ml --publish always",
    "pack-and-publish-linux": "npm run build && build -l --publish always",
    "test:cov": "jest --coverage",
    "test:unit": "jest",
    "test:watch": "jest --watchAll",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.(ts|tsx|js)"
    ]
  },
  "build": {
    "productName": "PiGit",
    "appId": "org.kfiku.PiGit",
    "files": [
      "dist/",
      "node_modules/",
      "resources/",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Utility"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kfiku/piGit.git"
  },
  "bugs": {
    "url": "https://github.com/kfiku/piGit/issues"
  },
  "homepage": "https://github.com/kfiku/piGit",
  "devDependencies": {
    "@types/async": "^2.0.48",
    "@types/chai": "^4.1.3",
    "@types/jest": "^23.3.1",
    "@types/mousetrap": "^1.6.0",
    "@types/node": "^9.6.1",
    "@types/prop-types": "^15.5.4",
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "@types/react-helmet": "^5.0.6",
    "@types/react-redux": "^6.0.6",
    "@types/sortablejs": "^1.3.32",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-latest": "^6.16.0",
    "chai": "^4.1.2",
    "devtron": "~1.4.0",
    "electron": "^7.2.4",
    "electron-builder": "^20.15.3",
    "electron-debug": "~1.5.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-updater": "^2.21.8",
    "express": "^4.16.3",
    "fuse-box": "^3.2.2",
    "jest": "^23.4.2",
    "nodemon": "^1.17.5",
    "redux-devtools-extension": "^2.13.5",
    "redux-devtools-instrument": "^1.9.0",
    "release-it": "^7.4.6",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3",
    "uglify-es": "^3.3.9",
    "uglify-js": "^3.3.22"
  },
  "dependencies": {
    "async": "^2.6.0",
    "diff2html": "^2.12.2",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.14",
    "electron-settings": "^3.2.0",
    "es6-promisify": "^6.0.0",
    "file-icons-js": "github:websemantics/file-icons-js",
    "git-dirs-search": "^1.1.1",
    "highlight.js": "^9.18.1",
    "jquery": "^3.5.0",
    "lodash": "^4.17.12",
    "moment": "^2.22.1",
    "mousetrap": "^1.6.1",
    "node-notifier": "^5.2.1",
    "prop-types": "^15.6.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^5.2.0",
    "react-icons": "^2.2.7",
    "react-redux": "^5.0.7",
    "react-resizable": "^1.7.5",
    "redux": "~4.0.0",
    "redux-thunk": "^2.2.0",
    "simple-git": "^1.132.0",
    "sortablejs": "~1.7.0",
    "styled-components": "^4.0.0",
    "snyk": "^1.320.2"
  },
  "snyk": true
}
