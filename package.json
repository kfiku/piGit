{
  "name": "PiGit",
  "version": "0.2.0",
  "description": "electron app to watch git repos",
  "main": "main.js",
  "scripts": {
    "test": "npm run lint && npm run test:cov",
    "postinstall": "npm run build",
    "dev": "export NODE_ENV=dev && npm run css && concurrently 'npm run css-w' 'npm run ts-w' 'npm start -- dev'",
    "lint": "tslint src/**/*.tsx src/**/*.ts -c tslint.json",
    "clean": "find src -name \"*.js*\" -type f -delete",
    "test:cov": "npm run ts && ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha test/unit/**/*.js",
    "test:unit": "npm run clean && ts-node ./node_modules/.bin/_mocha test/unit/**/*.ts",
    "build": "npm run css && npm run ts",
    "start": "electron .",
    "css": "node-sass src/scss/all.scss src/css/bundle.css",
    "css-w": "chokidar src/scss/**/*.scss src/scss/*.scss -c 'npm run css'",
    "ts": "tsc",
    "ts-w": "npm run ts -- -w ",
    "package": "electron-packager . --all",
    "test:unit-w": "chokidar test/unit/**/*.ts src/**/*.ts -c 'npm run test:unit' "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kfiku/piGit.git"
  },
  "keywords": [
    "Electron",
    "Git",
    "watch"
  ],
  "author": {
    "name": "Grzegorz Klimek",
    "email": "kfiku.com@gmail.com",
    "url": "https://github.com/kfiku"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kfiku/piGit/issues"
  },
  "homepage": "https://github.com/kfiku/piGit",
  "devDependencies": {
    "@types/async": "^2.0.32",
    "@types/chai": "^3.4.34",
    "@types/electron": "^1.4.24",
    "@types/es6-promise": "0.0.32",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.54",
    "@types/react": "^0.14.41",
    "@types/react-dom": "^0.14.18",
    "@types/react-redux": "^4.4.32",
    "@types/redux": "^3.6.31",
    "@types/redux-logger": "^2.6.32",
    "@types/sortablejs": "^1.3.30",
    "chai": "^3.5.0",
    "chokidar": "^1.6.0",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.0",
    "devtron": "^1.4.0",
    "electron": "^1.4.10",
    "electron-debug": "^1.1.0",
    "electron-devtools-installer": "^2.0.1",
    "electron-installer-debian": "^0.4.0",
    "electron-packager": "^8.3.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.1.2",
    "node-sass": "^4.0.0",
    "postcss": "^5.2.0",
    "postcss-cli": "^2.6.0",
    "precss": "^1.4.0",
    "release-it": "^2.5.1",
    "ts-node": "^2.0.0",
    "tslint": "^4.0.0-dev.1",
    "typescript": "^2.0"
  },
  "dependencies": {
    "async": "^2.0.1",
    "bulma": "^0.3.0",
    "classnames": "~2.2.5",
    "electron-settings": "^2.2.1",
    "font-awesome": "^4.6.3",
    "moment": "^2.16.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-inlinesvg": "^0.5.4",
    "react-redux": "^5.0.1",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.4",
    "redux-thunk": "^2.1.0",
    "simple-git": "^1.48.0",
    "sortablejs": "^1.5.0-rc1"
  }
}
